pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Клонируем репозиторий проекта
                    checkout scm
                }
            }
        }
        
        stage('Deploy Services') {
            steps {
                script {
                    dir('_devops/docker-compose') {
                        // Поднимаем docker-compose
                        sh 'docker compose -f docker-compose.yaml up -d --build'
                    }
                }
            }
        }
    }
    
    post {
        always {
            // Очистка рабочего пространства
            cleanWs()
        }
    }
}

